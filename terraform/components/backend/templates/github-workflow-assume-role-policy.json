{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect" : "Allow",
            "Action" : "sts:AssumeRoleWithWebIdentity",
            "Principal": {
                "Federated" : "${federated_provider_id}"
            },
            "Condition": {
                "StringLike": {
                    "token.actions.githubusercontent.com:sub": "${repo_sub}"
                }
            }
        }
    ]
}
